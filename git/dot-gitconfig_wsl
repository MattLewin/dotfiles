# --- Core & UI ---
[user]
    useConfigOnly = true
[core]
    excludesfile = ~/.gitignore_global
    autocrlf = input
    pager = less -+FX   # fast, no paging on short output; safe default
    filemode = false    # WSL-friendly: ignore chmod noise
[color]
    ui = true

# --- Diff / Merge ---
[diff]
    colorMoved = default
    renameLimit = 15000
[difftool "changed-lines-only"]
    cmd = /usr/bin/diff --unchanged-line-format= --old-line-format= --new-line-format='%L' "$LOCAL" "$REMOTE"
    trustExitCode = true
[merge]
    conflictstyle = zdiff3

# --- Colors (works with built-in diff; harmless w/out diff-highlight) ---
[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22
[color "diff"]
    meta = 11
    frag = magenta bold
    commit = yellow bold
    old = red bold
    new = green bold
    whitespace = red reverse
    func = 146 bold

# --- Workflow Defaults ---
[push]
    default = current
    followTags = true
[remote]
    pushdefault = origin
[pull]
    rebase = true
    ff = only
[fetch]
    prune = true
[commit]
    template = ~/.stCommitMsg
[stash]
    showPatch = true
[init]
    defaultBranch = develop
[branch]
    autoSetupMerge = always

# --- Aliases ---
[alias]
    clone-branches = "! git branch -a | sed -n \"/\\/HEAD /d; /\\/master$/d; /remotes/p;\" | xargs -L1 git checkout -t"
    patch = !git --no-pager diff --no-color --no-prefix $@

# --- Filters ---
[filter "lfs"]
   clean = git-lfs clean -- %f
   smudge = git-lfs smudge -- %f
   process = git-lfs filter-process
   required = true

# Additional includes
[include]
    path = ~/.git/included.gitconfig
