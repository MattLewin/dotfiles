[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[user]
	useConfigOnly = true
[credential]
	helper = osxkeychain
[core]
	excludesfile = ~/.gitignore_global
	autocrlf = input
	pager = delta
[interactive]
	diffFilter = delta --color-only
[delta]
	features = side-by-side line-numbers decorations
	navigate = true
	syntax-theme = Dracula
	plus-style = syntax
	minus-style = syntax
	file-decoration-style = cyan overline
	file-style = bold yellow
	hunk-header-style = line-number syntax
	commit-decoration-style = bold yellow box ul
	commit-style = raw
	line-numbers = true
	side-by-side = true

[merge]
	conflictstyle = diff3

[diff]
	colorMoved = default
[difftool "changed-lines-only"]
	cmd = /usr/bin/diff --unchanged-line-format= --old-line-format= --new-line-format='%L' \"$LOCAL\" \"$REMOTE\"
	trustExitCode = true
[push]
	default = current
	followTags = true
[commit]
	template = ~/.stCommitMsg
[diff]
	renameLimit = 15000
[alias]
	clone-branches = "! git branch -a | sed -n \"/\\/HEAD /d; /\\/master$/d; /remotes/p;\" | xargs -L1 git checkout -t"
    #clone-branches2 = "! git branch -a | sed -n \"/\\/HEAD /d; /\\/master$/d; /remotes/p;\" | $xargs -L1 -I{} git branch -t $( echo {} | sed 's:^remotes/[^/]*/:: ) {}"
    patch = !git --no-pager diff --no-color --no-prefix $@
	lazy = !lazygit
[remote]
	pushdefault = origin
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[gitflow "branch"]
	master = master
	develop = develop
[gitflow "prefix"]
	feature = feature/
	release = release/
	bugfix = bugfix/
	hotfix = hotfix/
	support = support/
	versiontag =
[color]
	ui = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 11
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
	func = 146 bold
[branch]
	autoSetupMerge = always
[fetch]
	prune = true
[stash]
	showPatch = true
[include]
	path = ~/.git/included.gitconfig
# rewrites of repo paths
[url "git@github.com:"]
  pushInsteadOf = "github:"
  pushInsteadOf = "git://github.com/"

[url "git://github.com/"]
  insteadOf = "github:"

[url "git@gist.github.com:"]
  pushInsteadOf = "gist:"
  pushInsteadOf = "git://gist.github.com/"

[url "git://gist.github.com/"]
  insteadOf = "gist:"

[pull]
	rebase = false
[init]
	defaultBranch = main
