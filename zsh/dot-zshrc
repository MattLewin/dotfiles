# ML: 2017-05-22
# Remove all duplicate entries in PATH
if [ -n "$PATH" ]; then
    old_PATH=$PATH:; unset PATH;
    while [ -n "$old_PATH" ]; do
        x=${old_PATH%%:*}       # the first remaining entry
        case $PATH: in
            *:"$x":*) ;;          # already there
            *) PATH=$PATH:$x;;    # not there yet
        esac
        old_PATH=${old_PATH#*:}
    done
    PATH=${PATH#:}
    unset old_PATH x
fi

